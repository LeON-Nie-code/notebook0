<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/centerline_vertical"
        android:layout_centerInParent="true"
        >

    </RelativeLayout>


    <!-- 添加四个图标按钮 -->

    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@id/insert_image_button"
        android:src="@drawable/edit" />

    <ImageView
        android:id="@+id/insert_image_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="-1dp"

        android:layout_toLeftOf="@id/centerline_vertical"
        android:src="@drawable/picture" />

    <ImageView
        android:id="@+id/insert_audio_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="-1dp"
        android:layout_toRightOf="@id/centerline_vertical"
        android:src="@drawable/audio" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/insert_audio_button"
        android:src="@drawable/save" />

</RelativeLayout>